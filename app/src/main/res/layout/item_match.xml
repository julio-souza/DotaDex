<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000">

    <ImageView
        android:id="@+id/imageView_itemMatch_hero"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_ancient_five"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_fragmentHome_gpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textView_itemMatch_date"
        app:layout_constraintEnd_toStartOf="@id/textView_itemMatch_date"
        android:layout_marginEnd="8dp"
        android:textColor="@color/dotaDex_gold"
        tools:text="850"/>

    <TextView
        android:id="@+id/textView_fragmentHome_xpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_fragmentHome_gpm"
        app:layout_constraintEnd_toStartOf="@id/textView_itemMatch_kda"
        android:layout_marginEnd="8dp"
        android:textColor="@color/dotaDex_white"
        tools:text="850"/>

    <TextView
        android:id="@+id/textView_itemMatch_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/dotaDex_white"
        tools:text="26/11/2019 15:30"/>

    <TextView
        android:id="@+id/textView_itemMatch_kda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/textView_itemMatch_date"
        app:layout_constraintStart_toStartOf="@id/textView_itemMatch_date"
        android:textColor="@color/dotaDex_white"
        tools:text="12/5/18"/>

    <TextView
        android:id="@+id/textView_itemMatch_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/textView_itemMatch_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"
        tools:text="VICTORY"/>

</androidx.constraintlayout.widget.ConstraintLayout>
